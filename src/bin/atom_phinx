 $log_path = storage_path("logs/php_error.log"); //__DIR__."/../../storage/logs/php_error.log";
ini_set('error_log', $log_path);
$env = getenv();

// Explicitly push environment variables into $_ENV
foreach ($env as $key => $value) {
    if (isset($_ENV[$key]) === false) {
        $_ENV[$key] = $value;
    }
}

$app = require base_path("vendor/robmorgan/phinx/app/phinx.php"); // __DIR__ . "/../../../../robmorgan/phinx/app/phinx.php";
$app->run();
